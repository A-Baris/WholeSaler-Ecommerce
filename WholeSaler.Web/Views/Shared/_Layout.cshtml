


<!DOCTYPE html>
<html lang="en">
@{
    string name = "";
    string userId = "";
    string visitorId = "";

    userId = ViewData["uId"] as string;
    name = User.Identity.Name;
    visitorId = Context.Request.Cookies["visitor"];

}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WholeSaler.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WholeSaler.Web.styles.css" asp-append-version="true" />

    <style>
        #basket-icon img {
            width: 50px;
            height: auto;
        }
    </style>
</head>
<body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WholeSaler.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>


                    </ul>
                    <div style="margin-right:5px">
                        <div id="basket-icon" onmouseover="showCart()" onmouseout="hideCart()">
                            <a asp-action="index" asp-controller="shoppingcart"><img src="~/images/basket.png" alt="Basket Icon"></a>
                            <span id="cart-count" style="color:red">0</span>
                        </div>
                    </div>
                    <div>
                        @if (!string.IsNullOrEmpty(name))
                        {
                            <ul class="navbar-nav flex-grow-1">

                                <li class="nav-item">


                                    <div class="dropdown">
                                        <a class="btn btn-primary dropdown-toggle nav-link text-dark" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            @name
                                        </a>

                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" href="/order/AllOrders">Orders</a></li>
                                            <li><a class="dropdown-item" href="#">Another action</a></li>
                                            <li><a class="dropdown-item" href="/auth/store/index">My Store</a></li>
                                        </ul>
                                    </div>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="user" asp-action="Logout">Logout</a>
                                </li>
                            </ul>
                        }
                        else
                        {


                            <a class="nav-item" asp-area="" asp-controller="user" asp-action="Login">Login</a>


                        }
                    </div>

                </div>
            </div>
        </nav>
    </header>
  
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
   

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WholeSaler.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>

        function updateCartCount() {
            var userId = @userId;
            var visitorId = @visitorId;
            var url = '';

            if (userId !== '') {
                url = `https://localhost:7185/api/shoppingcart/getcart/${userId}`;
            } else {
                url = `https://localhost:7185/api/shoppingcart/getcart/${visitorId}`;
            }

            $.ajax({
                url: url,
                method: 'GET',
                success: function (data) {
                    $('#cart-count').text(data.products.length);
                },
                error: function (xhr, status, error) {
                    console.error('Error fetching cart count:', error);
                }
            });
        }

        // Function to update cart count when needed
        function refreshCartCount() {
            // Call the function to update cart count
            updateCartCount();
        }

        $(document).ready(function () {
            // Call refreshCartCount initially
            refreshCartCount();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
