@model WholeSaler.Web.Models.ViewModels.Message.SendMessageVM
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var receiverId = ViewData["ReceiverId"];
    var receiverName = ViewData["ReceiverName"];

}


<div class="row justify-content-center">

    <div class="col-md-3">
        <form asp-action="sendMessage" asp-controller="user">
            <div class="form-group">
                <input value="@receiverName" disabled/>
                <input type="text" asp-for="ReceiverName" class="form-control" value="@receiverName" hidden />
                <input asp-for="ReceiverId" value="@receiverId" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="Header"></label>
                <input type="text" asp-for="Header" class="form-control"  placeholder="Header"/>
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Body"></label>
                <textarea type="text" asp-for="Body" class="form-control" placeholder="Body Text"></textarea>
                <span asp-validation-for="Body" class="text-danger"></span>
            </div>
            <div class="text-center" style="margin-top:5px">
                <button class="btn btn-primary" type="submit">Send Message</button>
            </div>

        </form>
    </div>
</div>
