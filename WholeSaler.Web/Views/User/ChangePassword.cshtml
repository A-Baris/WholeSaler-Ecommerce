@model WholeSaler.Web.Models.ViewModels.UserVM.ChangePasswordVM
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:40px">
    <div class="row justify-content-center">
        <div class="col-md-4">

            <form asp-action="changePassword" asp-controller="user" method="post">

                <div class="form-group">
                    <label>Current Password</label>
                    <input type="password" class="form-control" asp-for="CurrentPassword" required />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>New Password</label>
                    <input type="password" class="form-control" asp-for="NewPassword" required />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Re-New Password</label>
                    <input type="password" class="form-control" asp-for="ConfirmNewPassword" required />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary" style="margin-top:10px">Change Password</button>
                </div>

            </form>

        </div>
    </div>
</div>
