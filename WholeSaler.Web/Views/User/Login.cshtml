@model WholeSaler.Web.Models.ViewModels.UserVM.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var returnUrl = ViewBag.ReturnUrl;
}







<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6" >
            <div class="card" style="background-color:#ff7400;border-radius: 2em;">
                <div class="card-body">
                    <form asp-action="login" asp-controller="user">
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="email" asp-for="Email" class="form-control" style="border-radius: 2em;" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" asp-for="Password" class="form-control" style="border-radius: 2em;" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div>
                            <a href="/user/ForgotPassword">Forgot Password?</a>
                        </div>
                        <div class="form-group text-center" style="margin-top:10px">
                            <input name="returnUrl" hidden="">
                            <input type="submit" value="Login" class="btn btn-primary form-control" style="width:50%">
                        </div>
                    </form>
                    <p class="mt-3">
                        Not registered?
                        <a href="/user/register">
                            Create an
                            account
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
