@model IEnumerable<WholeSaler.Web.Models.ViewModels.OrderVM.OrderInformationVM>

@{
    ViewData["Title"] = "AllOrders";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    <a asp-action="index" asp-controller="home">Back to Index</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalOrderAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/orderBasket.jpg" alt="order" style="height:100px;width:100px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalOrderAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>


                <td>

                    @Html.ActionLink("Details", "Details", new { orderId = item.Id })

                </td>
            </tr>
        }
    </tbody>
</table>
