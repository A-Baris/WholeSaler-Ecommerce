 @model WholeSaler.Web.Areas.Auth.Models.ViewModels.Store.StoreCreateVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

 <form asp-action="create" asp-controller="store" method="post">

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Company Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" placeholder="Company Sector Information" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TaxNumber" class="control-label"></label>
        <input asp-for="TaxNumber" class="form-control" placeholder="Tax No" />
        <span asp-validation-for="TaxNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Adress.Country" class="control-label"></label>
        <input asp-for="Adress.Country" class="form-control" />
        <span asp-validation-for="Adress.Country" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Adress.City" class="control-label"></label>
        <input asp-for="Adress.City" class="form-control" />
        <span asp-validation-for="Adress.City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Adress.District" class="control-label"></label>
        <input asp-for="Adress.District" class="form-control" />
        <span asp-validation-for="Adress.District" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
   
     <button type="submit">Apply</button>
        </form>

