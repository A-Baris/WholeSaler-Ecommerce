@model List<WholeSaler.Web.Areas.Admin.Models.ViewModels.User.UserVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>User Informations</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Roles</th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Username</td>
            <td>@item.Email</td>
            <td>@item.PhoneNumber</td>
            <td>
                    @foreach(var roles in item.Roles)
                    {
                        <span style="color:red">[@roles.Name]</span>
                    }
           </td>
            
            <td>
               <a href="/admin/user/assignRoles?userId=@item.Id">Assign Role</a>
               
            </td>
        </tr>
}
    </tbody>
</table>
