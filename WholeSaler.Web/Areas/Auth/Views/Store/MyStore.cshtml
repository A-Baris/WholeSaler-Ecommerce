@model List<WholeSaler.Web.Areas.Auth.Models.ViewModels.Store.MyStoreVM>
@{
    ViewData["Title"] = "MyStore";
    Layout = "~/Areas/auth/Views/Shared/_Layout.cshtml";
    var successMessage = TempData["SuccessMessage"] as string;
    var errorMessage = TempData["ErrorMessage"] as string;
}
<link href="~/css/mystoreCard.css" rel="stylesheet" />

<div id="messageContainer" class="message-container">
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">
            <div class="d-flex justify-content-center align-items-center">
                <h6>@errorMessage</h6>

            </div>
        </div>



    }
    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">
            <div class="d-flex justify-content-center align-items-center">
                <h6>@successMessage</h6>

            </div>
        </div>



    }
</div>
<h1>MyStore</h1>
<div class="row">

    <div class="col-md-2" style="background-color: green;"></div>
    <div class="col-md-8">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="card" style="height:auto;">
                        <div class="card-img">
                        @if (item.Images == null)
                        {

                            <img src="~/images/exampleimage.jpg" alt="Denim Jeans" style="width:100%;height:200px">

                        }

                        else
                        {

                            <img src="~/images/products/@item.Images" alt="Denim Jeans" style="width:100%;height:200px">

                        }
                        </div>
                        <div class="card-body">
                        <h6>@item.Name</h6>
                        <p class="price">@item.UnitPrice</p>
                        <p>@item.Store.StoreName</p>
                        </div>
                        <div class="card-footer">
                            <p>
                                <a class="btn btn-outline-warning" href="/auth/product/edit?Id=@item.Id">Edit</a> 
                                <a class="btn btn-outline-danger" href="/auth/product/delete?productId=@item.Id&&storeId=@item.Store.StoreId">Delete</a></p>
                        </div>
                    </div>
                </div>

            }
        </div>
    </div>
    <div class="col-md-2" style="background-color: green;">aa</div>
</div>



<script>
    
  
    setTimeout(function () {
        var messageDiv = document.getElementById('messageContainer');
        if (messageDiv) {
            messageDiv.style.display = 'none';
        }
    }, 3000);
</script>